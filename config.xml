<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "bby261.rumeysagollu.loto"
        versionCode = "1" 
        version     = "0.0.1" >

    <!-- Standart Uygulama Verileri -->

    <name>Sayısal Loto</name>

    <description>
        Sayısal Loto 
    </description>

    <author href="rumeysagollu.wordpress.com" email="rumeysagollu@gmail.com">
        Fatma Rümeysa GÖLLÜ
    </author>
        
    <!-- Derleme Platformu -->
        
    <gap:platform name="android" />
        
    <!-- Ek Özellikler -->

    <!-- <preference name="orientation" value="landscape" /> -->
    <preference name="fullscreen" value="false" />
    <preference name="orientation" value="portrait" />
        
    <!-- Açılış Ekranı ve İkon -->
     
    <icon src="icon.jpg" />
    <gap:splash src="splash.png" />
    <preference name="splash-screen-duration" value="2000"/>
        
    <!-- Uygulama Hakları -->
    
    <preference name="permissions" value="none"/>
        
</widget>